<h1><%= @user.name %></h1>

<p><%= @user.username %></p>

<p><%= @user.phone %></p>
<p><%= @user.email %></p>
<p><%= @user.description %></p>

<ul>
  <li><%= link_to "Edit", edit_user_path(@user) %></li>
  <li><%= link_to "Delete", user_path(@user), method: :delete, data: {confirm: "Are you sure?"} %></li>
  <li><%= link_to "Go to List", users_path %></li>
</ul>